<!doctype html>
<html lang="en">
    <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="description" content="">
      <meta name="author" content="">
        <title>Match Maker</title>
          <%=render 'shared/head' %>
          <%=render 'shared/flash_messages' %>
        <!-- Bootstrap core CSS -->
        <link href="bootstrap/css/bootstrap.css" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="pricing.css" rel="stylesheet">
    </head>
    <body>
        <center><h2> Make A Match </h2></center>
         <center><h4> Select The Word and Phrase You Want to Match </h4></center>
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
            <nav class="my-2 my-md-0 mr-md-3">
            </nav>
                                                        <%= form_for @match do | match | %>
        </div>
        
        <div class="container">
          <div class="card-deck mb-3 text-center">
            
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <h1 class="card-title pricing-card-title">Your Words</h1>
                        
                <ul class="list-unstyled mt-3 mb-4">
                                                          <% @words.each do |word| %>
                                                            <%= match.fields_for word do |w| %>
                                                              <div>
                                                                <li> <%= w.label :id, word.name %>
                                                                     <%= w.radio_button :id, word.id, :checked => true %>
                                                                </li>
                                                              </div>
                                                            <% end %>
                                                          <%end%>
                </ul>
                  
              </div>
            </div>
            
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <h1 class="card-title pricing-card-title">Your Phrases</h1>
                
                <ul class="list-unstyled mt-3 mb-4">
                                                          <% @phrases.each do |phrase| %>
                                                            <%= match.fields_for phrase do |p| %>
                                                              <div>
                                                                <li> <%= p.label :id, phrase.name %>
                                                                     <%= p.radio_button :id, phrase.id, :checked => true %>
                                                                </li>
                                                              </div>
                                                            <% end %>
                                                          <%end%>
                </ul>
              </div>
            </div>
          </div>
        </div>
<h1> Make a Match </h1>
<% if flash[:notice]%>
  <%= render 'shared/flash_messages' %>
<%end%>

                                                          <%= match.submit %>
                                                        <% end %>
  
        <!-- Bootstrap core JavaScript
    ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/js/popper.js"></script>
        <script src="bootstrap/js/bootstrap.min.js"></script>
    </body>
</html>
