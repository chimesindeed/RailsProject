<%=render 'shared/head'%>
<center><h1>Your Matches</h1></center>

<ul>
  <% @matches.each do |match| %>
    <li>
      <h4> <%= Word.find(match.word_id).name %> - - - > <%= Phrase.find(match.phrase_id).name %> </h4>
      
      <div>
        <h6> <%= match.note %> </h6>
      </div>
      
      <%= link_to 'Show', match_path(match) %>
      <%= link_to 'Edit', edit_match_path(match) %>
      <%= link_to 'Delete', match_path(match), method: :delete %> 
    </li>
  <% end %>
</ul>




